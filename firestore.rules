rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Apps collection - read-only for all, write only for admins
    match /apps/{appId} {
      // Allow anyone to read apps (public app store)
      allow read: if true;
      
      // Only allow writes from authenticated admin users
      // You'll need to set up admin authentication separately
      allow write: if request.auth != null 
                   && request.auth.token.admin == true;
      
      // Validate app data structure
      allow create: if request.resource.data.keys().hasAll(['app_name', 'package_name', 'download_url', 'app_icon'])
                    && request.resource.data.app_name is string
                    && request.resource.data.package_name is string
                    && request.resource.data.download_url is string
                    && request.resource.data.app_icon is string;
      
      allow update: if request.resource.data.keys().hasAll(['app_name', 'package_name', 'download_url', 'app_icon'])
                    && request.resource.data.app_name is string
                    && request.resource.data.package_name is string
                    && request.resource.data.download_url is string
                    && request.resource.data.app_icon is string;
    }
    
    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

